{% if ur['control_interfaces'] is defined and ur['control_interfaces'] != '' %}
{% for int in ur['control_interfaces'] %}
{{ '  control-interface: ' + int }}
{% endfor %}
{% endif %}
{% if ur['control_port'] is defined and ur['control_port'] != '' %}
{{ '  control-port: ' ~ ur['control_port'] }}
{% endif %}
{% if ur['control_use_cert'] is defined and ur['control_use_cert'] in ['yes',
  'no'] %}
{{ '  control-use-cert: ' + ur['control_use_cert'] }}
{% endif %}
{% if ur['server_key_file'] is defined and ur['server_key_file'] in ['yes',
  'no'] %}
{{ '  server-key-file: ' + ur['server_key_file'] }}
{% endif %}
{% if ur['server_cert_file'] is defined and ur['server_cert_file'] != '' %}
{{ '  server-cert-file: ' + ur['server_cert_file'] }}
{% endif %}
{% if ur['control_key_file'] is defined and ur['control_key_file'] != '' %}
{{ '  control-key-file: ' + ur['control_key_file'] }}
{% endif %}
{% if ur['control_cert_file'] is defined and ur['control_cert_file'] != '' %}
{{ '  control-cert-file: ' + ur['control_cert_file'] }}
{% endif %}
